<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/memotext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="메모"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/memoEditText"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/memoEditText"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_margin="20dp"
        android:maxLines="6"
        android:nestedScrollingEnabled="true"
        android:padding="10dp"
        android:singleLine="false"
        app:layout_constraintBottom_toTopOf="@id/memoSubmitButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/memotext" />

    <Button
        android:id="@+id/memoSubmitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="저장"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/memoEditText" />


</androidx.constraintlayout.widget.ConstraintLayout>